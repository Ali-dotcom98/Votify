<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link rel="stylesheet" href="/src/output.css">
</head>

<body class="flex flex-col items-center justify-center min-h-screen bg-gray-100">

    <% if (message.length> 0) { %>
        <p class="text-red-600 font-semibold">
            <%= message[0] %>
        </p>
        <% } %>


            <% if (success.length> 0) { %>
                <p id="message1" class="text-green-600 font-semibold">
                    <%= success[0] %>
                </p>
                <% } %>

                    <div class="w-full max-w-xs p-8 bg-white rounded-lg shadow-md">
                        <div class="flex justify-center mb-6">
                            <div class="text-blue-600">
                                <svg class="w-16" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
                                    stroke-width="1.5" stroke="currentColor" class="size-6">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                        d="M8.25 9V5.25A2.25 2.25 0 0 1 10.5 3h6a2.25 2.25 0 0 1 2.25 2.25v13.5A2.25 2.25 0 0 1 16.5 21h-6a2.25 2.25 0 0 1-2.25-2.25V15M12 9l3 3m0 0-3 3m3-3H2.25" />
                                </svg>

                            </div>
                        </div>
                        <h2 class="text-2xl font-bold text-center text-gray-700 mb-6">Welcome!</h2>
                        <p class="text-sm text-center text-gray-500 mb-8">Sign in to your account</p>

                        <form method="post" action="/Site/Login">
                            <div class="mb-4">
                                <label class="block text-gray-700 text-sm font-bold mb-2" for="Name">
                                    Email
                                </label>
                                <div class="relative flex flex-col items-center justify-start">
                                    <input
                                        class="<%- validation.find(e => e.path === 'Email') ? 'Invalid' : 'Valid' %> w-full px-3 py-2 text-sm text-gray-700 border-b focus:outline-none focus:ring-1 rounded-sm focus:ring-blue-600 focus:border-transparent"
                                        id="Email" type="text" placeholder="Enter your Email" name="Email"
                                        value="<%- Oldvalue.Email %>">
                                    <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                                        <svg class="w-5 text-gray-700" xmlns="http://www.w3.org/2000/svg" fill="none"
                                            viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
                                        </svg>
                                    </div>
                                </div>
                            </div>
                            <div class="block" id="Message1"></div>

                            <div class="mb-6">
                                <label class="block text-gray-700 text-sm font-bold mb-2" for="Password">
                                    Password
                                </label>
                                <div class="relative">
                                    <input class="<%- validation.find(e => e.path == " Password")? 'Invalid' : 'Valid'
                                        %> w-full px-3 py-2 text-sm text-gray-700 border-b focus:outline-none
                                    focus:ring-1 rounded-sm focus:ring-blue-600 focus:border-transparent" id="Password"
                                    type="password" placeholder="Enter your password" name="Password" value="<%-
                                        Oldvalue.Password %>">
                                        <div class="absolute inset-y-0 right-0 flex items-center pr-3">
                                            <svg class="w-5 text-gray-700" xmlns="http://www.w3.org/2000/svg"
                                                fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
                                                class="size-6">
                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                    d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                                                <path stroke-linecap="round" stroke-linejoin="round"
                                                    d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                                            </svg>
                                        </div>
                                </div>
                            </div>

                            <div class="block" id="Message2"></div>

                            <div class="flex items-center justify-between mb-4 font-Popins">
                                <a href="/Site/Signup" class="text-sm text-blue-600 hover:underline">Sign_up</a>
                                <a href="/Site/Forgot" class="text-sm text-blue-600 hover:underline">Forgot
                                    password?</a>
                            </div>

                            <div class="hover:ring-1 hover:rounded-md ring-blue-600">
                                <button type="submit"
                                    class="w-full px-4 py-2 text-sm font-bold text-white bg-blue-600 rounded-lg hover:bg-white hover:text-blue-600">
                                    Login
                                </button>
                            </div>
                        </form>
                    </div>
</body>
<script>
    const invalidElements = document.getElementsByClassName('Invalid');
    Array.from(invalidElements).forEach(element => {
        element.style.border = '2px solid red';
    });

    const invalidElements1 = document.getElementsByClassName('Valid');
    Array.from(invalidElements1).forEach(element => {
        element.style.border = '2px solid green';
    });
    const data = document.getElementById("message")
    if (data) {
        setTimeout(() => {
            data.remove();
        }, 5000)
    }

    const data1 = document.getElementById("message1")
    if (data1) {
        setTimeout(() => {
            data1.remove();
        }, 3000)
    }
</script>

</html>