<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="/src/output.css">
</head>
<body class="font-Popins">
    <div class=" mx-4 mt-4 flex flex-row items-center justify-between mb-5 ">
        <div class="text-2xl text-gray-900 ">
            Over View
        </div>
        <div>
            <a href="/home" class="font-Popins" >
            <div class="  font-Popins border border-gray-300 p-2 rounded-xl hover:bg-gray-900 hover:text-white transition ease-in duration-200  flex flex-row gap-2 w-fit
            font-semibold uppercase">
                <svg class="w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
                </svg>
                <h1 class="">Back</h1>
            </div>
        </a>
        </div>
        

    </div>
    
    <div class="relative overflow-x-auto mx-4 mt-4">
        <table class="w-full text-center text-gray-500 border border-gray-500">
            
            <thead class="text-lg text-white uppercase  bg-gray-900 dark:text-white">
                <tr >
                    <th scope="col" class="px-6 py-3">Party</th>
                    <th scope="col" class="px-6 py-3">Votes</th>
                </tr>
            </thead>
            <tbody class="font-Popins">
                <% for( let index = 0; index < parties.length; index++ ) { %>
                
                    <tr  class="  bg-white text-black border-b border-gray-500 text-lg">
                        <td class="px-6 py-4"><%- parties[index].Party %></td>
                        <td class="px-6 py-4"><%- parties[index].Votes %></td>
                    </tr>

                <% } %>
               
            </tbody>
        </table>
    </div>
    


        <div class="w-1/2 mx-4 mt-4">
            <div class="text-2xl text-gray-900 ">
                Bar Chart
            </div>
            <div class="flex flex-row justify-center items-center">
                <canvas id="Chart" style="width: 400px; height: 300px;" class="p-5"></canvas>
            </div>
            

        </div>
        
</body>
<script>
    // Data from the server (already sorted)
    const data = <%- JSON.stringify(parties) %>;

    // Prepare data for Chart.js
    const labels = data.map(party => party.Party);
    const votes = data.map(party => party.Votes);

    const ctx = document.getElementById('Chart').getContext('2d');
    const votesChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'Votes',
                data: votes,
                backgroundColor: [
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(153, 102, 255, 0.2)'
                ],
                borderColor: [
                    'rgba(75, 192, 192, 1)',
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(153, 102, 255, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>

</html>